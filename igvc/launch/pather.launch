<?xml version="1.0"?>

<!-- map.launch -->
<launch>
    <!-- Waypoints -->
    <include file="$(find igvc)/launch/waypoint_source.launch" />

    <!-- Planner -->
    <node name="path_planner" pkg="igvc" type="pathplanner" output="screen" >
        <param name="goal_threshold" type="double" value="0.5"/>
        <param name="c_space" type="double" value="0.2"/>
        <param name="probability_threshold" type="double" value="0.7"/>
        <param name="point_turns_enabled" type="bool" value="false"/>
        <param name="reverse_enabled" type="bool" value="false"/>
    </node>

    <!-- Follower -->
    <node name="path_follower" pkg="igvc" type="path_follower" output="screen" >
        <param name="max_vel" type="double" value="1.0"/>
        <param name="axle_length" type="double" value="0.52"/>
        <param name="lookahead_dist" type="double" value="2.0"/>
    </node>

</launch>
