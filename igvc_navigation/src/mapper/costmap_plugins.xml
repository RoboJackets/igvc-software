<class_libraries>
  <library path="lib/libwrapper_layer">
    <class type="wrapper_layer::WrapperLayer" base_class_type="costmap_2d::Layer">
      <description>Wrapper layer that just wraps the current mapper. See
        https://github.com/RoboJackets/igvc-software/issues/485</description>
    </class>
  </library>
  <library path="lib/liblidar_layer">
    <class type="lidar_layer::LidarLayer" base_class_type="costmap_2d::Layer">
      <description>
        Lidar layer that performs occupancy grid mapping, using gridmap as the backing data structure.
      </description>
    </class>
  </library>
  <library path="lib/libline_layer">
    <class type="line_layer::LineLayer" base_class_type="costmap_2d::Layer">
      <description>
        Line layer that performs occupancy grid mapping, using gridmap as the backing data structure.
      </description>
    </class>
  </library>
  <library path="lib/libunrolling_layer">
    <class type="unrolling_layer::UnrollingLayer" base_class_type="costmap_2d::Layer">
      <description>
        Layer that undos a rolling window map
      </description>
    </class>
  </library>
  <library path="lib/libtraversability_layer">
    <class type="traversability_layer::TraversabilityLayer" base_class_type="costmap_2d::Layer">
      <description>
        Layer that that performs occupancy grid mapping, using gridmap as the backing data structure.
      </description>
    </class>
  </library>
  <library path="lib/librolling_layer">
    <class type="rolling_layer::RollingLayer" base_class_type="costmap_2d::Layer">
      <description>
        Layer that transfers data from global costmap to local costmap.
      </description>
    </class>
  </library>
  <library path="lib/libback_circle_layer">
    <class type="back_circle_layer::BackCircleLayer" base_class_type="costmap_2d::Layer">
      <description>
        Layer that creates a half-circle blocking the backwards path of the robot.
      </description>
    </class>
  </library>
</class_libraries>
